<h1> Artwork
<% case @type %>
<% when 'artist' %>
<%= 'by' %>
<% when 'donor' %>
<%= 'donated by' %>
<% when 'location' %>
<%= 'at' %>
<% end %>
<%= @value%>
</h1>

<% @artworks.each do |artwork| %>
<div>
<table width="75%"><tr>
<td width="40%">
<%= image_tag artwork.filename + '.jpg', :width => '100%' %>
</td>
<td>
<span><%= artwork.title %></span><br/>
<span><%= artwork.creator %></span><br/>
<span><%= artwork.object %></span><br/>
<span><%= artwork.recfrom %></span><br/>
<span><%= artwork.location %></span><br/>
<p><%= artwork.description %></p>
</td>
<% end %>
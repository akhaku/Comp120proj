<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'autocomplete-rails.js' %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <% if user_signed_in? %>
        <div id="header">Tufts University Art Gallery Administration <%= link_to 'Logout' ,destroy_user_session_path %>  </div>
        <div id="navbar">
          <%= link_to 'Home', :root %>
          <%= link_to 'Add Art', addart_path %>
          <%= link_to 'Search Art', :arts %>
          <%= link_to 'Exhibitions', exhibitions_path %>
          <%= link_to 'Tours', tours_path %>
          <%= link_to 'Manage', manage_path %>
        </div>
        <div id="content">
        <%  end %>
        <%= yield %>
        <% if user_signed_in? %>
        </div>
      <% end %>
    </div>
  </body>
</html>

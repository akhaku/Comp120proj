<h1>Manage Account</h1>
<p id="notice"> <%= notice %></p>
<h2>Change password</h2>
<% semantic_form_for @user, :url=>'manage/changepass' do |f| %>
  <div>For: <span><%= current_user.email  %></span></div>
  <%= f.inputs do %>
    <%= f.input :password, :required=>true, :input_html=>{:size=>20} %>
    <%= f.input :password_confirmation, :required=>true, :input_html=>{:size=>20} %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class=>'formbut'} %>
  <% end %>
<% end %>
<div class="note">Password must be at least 6 characters long</div>
<% if current_user.issuper? %>
  <br/><br/><hr/>
  <h2>Add user</h2>
  <% semantic_form_for @usern, :url=>'manage/create' do |f| %>
    <%= f.inputs do %>
      <%= f.input :email, :required=>true, :input_html=>{:size=>20} %>
      <%= f.input :password, :required=>true, :input_html=>{:size=>20} %>
      <%= f.input :password_confirmation, :required=>true, :input_html=>{:size=>20} %>
    <% end %>
    <%= f.buttons do %>
      <%= f.submit :class=>'formbut' %>
    <% end %>
  <% end %>
<% end %>
